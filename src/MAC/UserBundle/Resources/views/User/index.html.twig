{# heredar de una plantilla #}
{% extends 'layout.html.twig' %}

{# definicion del blque body #}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="page-header margin-none">
            <h2>{{ title | upper}}</h2>
        </div>
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>First name</th>
                        <th>last name</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                
                <tbody>
                    {# logica para recorrer y mostrar los usuarios #}
                    {%  for user in users %}
                    
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.role == 'ROLE_ADMIN' %}
                                    <strong>Administrator</strong>
                                {% elseif user.role == 'ROLE_USER' %}
                                    <strong>User</strong>
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt | date('d-m-Y H:i') }}</td>
                            <td>{{ user.updatedAt | date('d-m-Y H:i') }}</td>
                            <td class="actions">
                                <a href="#" class="btn btn-sm btn-info">view</a>
                                <a href="#" class="btn btn-sm btn-primary">edit</a>
                                <a href="#" class="btn btn-sm btn-danger">delete</a>
                            </td>
                        </tr>
                    
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}